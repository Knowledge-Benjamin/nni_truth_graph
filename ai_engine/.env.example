# AI Engine Environment Variables
# Copy this file to .env and fill in your actual values

# PostgreSQL Database Connection (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Neo4j Graph Database (Optional - Required for GraphSearcher advanced search)
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password

# Google Gemini API (Optional - Required for natural language query translation)
GEMINI_API_KEY=your-gemini-api-key

# Hugging Face Token (Optional - Required for cloud mode embeddings)
HF_TOKEN=your-huggingface-token

# Google Fact Check API (Optional - Enables Google Fact Check API)
GOOGLE_FACT_CHECK_KEY=your-google-fact-check-api-key

# Serper API (Optional - Enables web citation search)
SERPER_API_KEY=your-serper-api-key

# Execution Mode: local|cloud|heuristic (Default: heuristic)
# - local: Loads models into RAM (Heavy). Best for dedicated GPU servers.
# - cloud: Calls HuggingFace API (Zero RAM). Best for Production/Dev with API Key.
# - heuristic: Uses Keyword Logic (Zero RAM). Best for local testing without crashing.
EXECUTION_MODE=heuristic

# Application Environment: development|production (Default: development)
APP_ENV=development

# Server Port (Default: 8001)
PORT=8001
