# Server Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment: development|production (Default: development)
# Controls CORS policy and security settings
APP_ENV=development

# Neo4j Graph Database (Required)
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password

# PostgreSQL Database Connection (Optional - Required for PostgreSQL access and consistency checks)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# AI Engine URL (Optional - Defaults to http://localhost:8001 if not set)
AI_ENGINE_URL=http://localhost:8001

# Server Port (Default: 3000)
PORT=3000

# CORS Configuration (Required for production)
# Comma-separated list of allowed origins (e.g., https://yourdomain.com,https://app.yourdomain.com)
# In development, localhost:3000, localhost:5173, and localhost:3001 are automatically allowed
# In production, this MUST be set to specific domains. Requests from unlisted origins will be rejected.
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
